<div class="container">
<div class="login-form">
    <form method='post' action='/login' >
        <h2 class="text-center">Log in</h2>       
        <div class="form-group">
            <input type="email" class="form-control" id="email" name="email"
             placeholder="Email" required="required"  oninvalid="setCustomValidity('Enter Valid Email !')"
             oninput="setCustomValidity('')"  >
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="password" name="password"
            placeholder="Password" required="required" oninvalid="setCustomValidity('Password cannot be blank!')"
            oninput="setCustomValidity('')" >
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>
        <div class="clearfix">
            <!--  <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>
          <a href="#" class="pull-right">Forgot Password?</a> -->
        </div> 
        <div>
        <%if(typeof message!='undefined'){%>
            <p class="text-center text-danger text-bold"><%=message%></p>
        <%}%>
       </div>       
    </form>
    
</div>
</div>