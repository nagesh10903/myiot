<h3>User</h3>
<form action="/locations/<%=pageData.action%>" method="post">
    <%if(pageData.action==='edit'){%>
        <input type="hidden" id="rowid" name="rowid" value="<% if (result!==null) { %><%=result.rowid%><%}%>" >
    <%}%>
   
    <div class="form-group row">
        <label for="locationname" class="col-sm-2 col-form-label">Location Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="locationname" name="locationname" placeholder="locationname" <%if(pageData.action==='edit'){%><%='disabled'%> <%}%>
            value="<% if (result!==null) { %><%=result.locationname%><%}%>" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="address" class="col-sm-2 col-form-label">Address</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="address"  name="address"  
            value="<% if (result!==null) { %><%=result.address%><%}%>"  placeholder="Address" 
           required>
        </div>
    </div>
    <div class="form-group row">
        <label for="address2" class="col-sm-2 col-form-label">Adress2</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="address2"  name="address2" placeholder="Address2"
            value="<% if (result!==null) { %><%=result.address2%><%}%>"  > 
        </div>
    </div>
    <div class="form-group row">
        <label for="street" class="col-sm-2 col-form-label">Street</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="street" name="street" 
            value="<% if (result!==null) { %><%=result.street%><%}%>" placeholder="First Name">
        </div>
    </div>
    <div class="form-group row">
        <label for="city" class="col-sm-2 col-form-label">City</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="city"  name="city"  
            value="<% if (result!==null) { %><%=result.city%><%}%>" placeholder="City">
        </div>
    </div>
    <div class="form-group row">
        <label for="state" class="col-sm-2 col-form-label">State</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="state"  name="state"  
            value="<% if (result!==null) { %><%=result.state%><%}%>" placeholder="State">
        </div>
    </div>
   
        <div class="form-group row">
            <label for="phone" class="col-sm-2 col-form-label">Mobile</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="phone" name="phone" 
                value="<% if (result!==null) { %><%=result.phone%><%}%>" placeholder="Mobile No.">
            </div>
        </div>
        <div class="form-group row">
            <label for="locationtype" class="col-sm-2 col-form-label">Type</label>
            <div class="col-sm-10">
             <select class="form-control" id="locationtype" name="locationtype" >
              value="<% if (result!==null) { %><%=result.locationtype%><%}%>">
              <option value="DEFAULT" selected>Default</option> 
              <option value="HOME">Home</option>
              <option value="HALL" >Hall</option> 
              <option value="PARK" >Park</option> 
              <option value="LAWN" >Lawn</option> 
              <option value="STREET" >Street</option> 
              <option value="COMPANY">Company</option>
              <option value="FIELD">Field</option>
             </select>
            </div>
        </div>
      
        <div class="form-group row">
            <label for="latitude" class="col-sm-2 col-form-label">Latitude</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="latitude" name="latitude" 
                value="<% if (result!==null) { %><%=result.latitude%><%}%>" placeholder="Latitude">
            </div>
        </div>
        <div class="form-group row">
            <label for="longitude" class="col-sm-2 col-form-label">Longitude</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="longitude" name="longitude" 
                value="<% if (result!==null) { %><%=result.longitude%><%}%>" placeholder="Longitude">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">               
                <button type="submit" class="btn btn-primary">Save</button>
              
                <a href="javascript:history.back()"  class="btn btn-primary">Back</a>
            </div>
        </div>
</form>

<script>
    $(function() {
        $("#locationtype").val("<%=result.locationtype%>");
  
    });
  </script>