<h3>User</h3>
<form action="/users/<%=pageData.action%>" method="POST">

        <input type="hidden" id="rowid" name="rowid" value="<%=result.rowid%>" >   
    <div class="form-group row">
        <label for="result.username" class="col-sm-2 col-form-label">User Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control"  disabled
            value="<%=result.username%>" >
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control"
            value="<%=result.email%>" disabled >
          
        </div>
    </div>
   
    <div class="form-group row">
        <label for="fname" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" 
            value="<%=result.fname%>" disabled>
        </div>
    </div>
    <div class="form-group row">
        <label for="lname" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" 
            value="<%=result.lname%>" disabled>
        </div>
    </div>
   
     <div class="form-group row">
         <label for="phone" class="col-sm-2 col-form-label">Mobile</label>
         <div class="col-sm-10">
             <input type="text" class="form-control" 
             value="<%=result.phone%>" disabled>
         </div>
     </div>

     <div class="form-group row">
         <label for="usertype" class="col-sm-2 col-form-label">Type</label>
         <div class="col-sm-10">
          <select class="form-control" id="usertype" name="usertype"  disabled
           value="<%=result.usertype%>">
            <option value="USER" selected>User</option>           
            <option value="GUEST">Guest</option>
            <option value="ADMIN">Admin</option>
          </select>
         </div>
     </div>
       
        <div class="form-group row">
            <label for="usercategory" class="col-sm-2 col-form-label">Category</label>
            <div class="col-sm-10">
                <select class="form-control" id="usercategory" name="usercategory" disabled value="<%=result.usercategory%>">
                  <option value="Default" selected>Default</option>           
                  <option value="CAT01">Category1</option>
                  <option value="CAT02">Category2</option>
                </select>
               </div>
        </div>

        <div class="form-group row">
            <label for="locationid" class="col-sm-2 col-form-label">Device Location</label>
            <div class="col-sm-10">
             <select class="form-control" id="locationid" name="locationid"   disabled           
              value="<% if (result!==null) { %><%=result.locationid%><%}%>"> 
              <option value="" selected>Select a Location</option>            
                <%  pageData.locations.forEach( row =>{   %>       
                    <option value="<%= row['rowid'] %>"><%=row['locationname']+'('+ row['locationtype']+','+row['address'] +')' %> </option>     
                     <%  }); %>
             </select>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">  
                <%if(pageData.action==="delete"  && user.usertype==="ADMIN"){%>                
                <button type="submit" class="btn btn-primary" <%if(result.usertype==="ADMIN"){%><%='disabled'%> <%}%>>Delete</button>
                <%}%>
                <%if(pageData.mode==="view" && user.usertype==="ADMIN"){%>                
                    <a href="/<%=pageData.urlRoute%>/edit/<%=result.rowid%>" class="btn btn-primary">Edit</a>
                <%}%>
              
                <a href="javascript:history.back()"  class="btn btn-primary">Back</a>
            </div>
        </div>
</form>
<script>
    $(function() {
        $("#usertype").val("<%=result.usertype%>");
        $("#usercategory").val("<%=result.usercategory%>");
        $("#locationid").val("<%=result.locationid%>"); 
    });
</script>